import numpy as np
import pandas as pd

df_All_data= pd.read_csv("Final_merged_human_43_0.4.csv")
df_All_data=df_All_data.drop(['Accession'],axis=1)
df_All_data=df_All_data.drop(["position"], axis=1)
labels = df_All_data['Label']
df_All_data = df_All_data.drop('Label', axis=1)
from collections import Counter
label_counts = Counter(labels)
print(label_counts)
blosum62 = {
