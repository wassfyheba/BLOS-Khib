def encode_sequence(sequence, blosum_matrix):
    encoding = []
    for aa in sequence:
        if aa in blosum_matrix:
            encoding.extend(blosum_matrix[aa])  # Extend the encoding list with BLOSUM62 values
        else:
            encoding.extend([0] * len(blosum_matrix['A']))  # Extend with zeros for unknown amino acids
    return np.array(encoding) # Create the NumPy array
df_All_data['encoded_sequence'] = df_All_data['sequence'].apply(lambda seq: encode_sequence(seq, blosum62))

for i in range(len(df_All_data['encoded_sequence'][0])):
  df_All_data[f'feature_{i}'] = df_All_data['encoded_sequence'].apply(lambda x: x[i] if len(x) > i else 0)

df_All_data = df_All_data.drop('encoded_sequence', axis=1)
df_All_data.to_csv('Blosum_human_Khib.csv', index=False)

